<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TNS_Mobile.Pages.MagistralOptionsPage">

    <Grid>
        <ScrollView  Margin="5,5,5,80">
            <StackLayout>
                <StackLayout Margin="5">
                    <Label Text="Название"/>
                    <Entry Text="{Binding EquipmentName}"/>
                </StackLayout>
                <StackLayout Margin="5">
                    <Label Text="Частота"/>
                    <Entry Text="{Binding Chastota}" Keyboard="Numeric"/>
                </StackLayout>
                <StackLayout Margin="5">
                    <Label Text="Коэффициент затухания"/>
                    <Entry Text="{Binding Koefficient}"/>
                </StackLayout>
                <StackLayout Margin="5">
                    <Label Text="Технология передачи данных"/>
                    <Entry Text="{Binding Technology}"/>
                </StackLayout>
                <StackLayout Margin="5">
                    <Label Text="Расположение"/>
                    <Entry Text="{Binding Address}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <Grid VerticalOptions="End" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Cancel" Grid.Column="0" Clicked="Cancel_Clicked" VerticalOptions="End" Text="Отмена" HorizontalOptions="Fill"/>
            <Button x:Name="Save" Grid.Column="1" Clicked="Save_Clicked" VerticalOptions="End" Text="Сохранить" HorizontalOptions="Fill"/>
        </Grid>
    </Grid>

</ContentPage>